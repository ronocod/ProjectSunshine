<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.conor.sunshine">

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name=".app.MainActivity"
      android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".app.DetailActivity"
      android:label="@string/title_activity_detail"
      android:parentActivityName=".app.MainActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".app.MainActivity" />
    </activity>
    <activity
      android:name=".app.SettingsActivity"
      android:label="@string/title_activity_settings" />

    <provider
      android:authorities="com.example.conor.sunshine"
      android:name="com.example.conor.sunshine.app.data.WeatherProvider"
      android:exported="false"
      android:enabled="true" />
  </application>

</manifest>
